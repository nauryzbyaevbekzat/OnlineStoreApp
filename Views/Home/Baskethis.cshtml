@model IEnumerable<AspaApp.Models.Baskethis1>

@{
    if (User.Identity.IsAuthenticated == true)
    {

        Layout = "_Layout2";
    }
    else
    {

        Layout = "_Layout";
    }

    
}
<br>
<h3>Корзина</h3>
<br>
@foreach (var item in Model.Where(p => p.Email == User.Identity.Name))
{
    <div class="row mb-0">
        <div class="col-md-10">
            <div class="card flex-md-row mb-4 box-shadow h-md-250">
                <div class="card-body d-flex flex-column align-items-start">
                    <strong class="d-inline-block mb-2 text-primary">@item.ProductName</strong>
                   
                    <h3>Стоимость:@item.ProductCost тг</h3>

                    <a href="~/Home/Buy/@item.BasketId">Заказать</a>
                    <a asp-action="Delete2" asp-controller="Home" asp-route-id="@item.BasketId">Удалить</a>
                </div>
                @if (item.ProductImage != null)
                {
                    <img class="card-img-right flex-auto d-none d-md-block" style='width:300px; height:250px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(item.ProductImage))">
                }
            </div>
        </div>
    </div>



    
}
